<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:Freya.Desktop.Core.Controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MediumPrimaryStyleIconButton"
           TargetType="controls:IconButtonControl">
        <Setter Property="ButtonSize"
                Value="40" />
        <Setter Property="IconSize"
                Value="18" />
    </Style>
    <Style x:Key="MediumSecondaryStyleIconButton" 
           TargetType="controls:IconButtonControl">
        <Setter Property="ButtonSize"
                Value="40" />
        <Setter Property="IconSize"
                Value="18" />
        <Setter Property="Background"
                Value="{DynamicResource secondary2ColorBrush}" />
    </Style>
    
    <Style x:Key="SmallPrimaryStyleIconButton" 
           TargetType="controls:IconButtonControl">
        <Setter Property="ButtonSize"
                Value="32" />
        <Setter Property="IconSize"
                Value="18" />
    </Style>
    <Style x:Key="SmallSecondaryStyleIconButton" TargetType="controls:IconButtonControl">
        <Setter Property="ButtonSize"
                Value="32" />
        <Setter Property="IconSize"
                Value="18" />
        <Setter Property="Background"
                Value="{DynamicResource secondary2ColorBrush}" />
    </Style>
</ResourceDictionary>